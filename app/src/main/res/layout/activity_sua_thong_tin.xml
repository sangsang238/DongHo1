<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#313131"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnTrangChu"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="#313131"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/chuong_iv"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_logo"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/function"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnTurnBack_suathongtin"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="#313131"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/imgTurnBack"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_turnback"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Change Information"
            android:textStyle="bold"
            android:textSize="40sp"
            android:gravity="center|bottom"
            android:textColor="@color/white"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="20sp"
                android:textColor="#706F6F"
                android:gravity="bottom"/>
            <EditText
                android:id="@+id/email_suathongtin"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:inputType="textWebEmailAddress"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:background="@drawable/edittext_background" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Password:"
                android:textSize="20sp"
                android:textColor="#706F6F"
                android:gravity="bottom"
                android:layout_marginTop="30dp"/>
            <EditText
                android:id="@+id/password_suathongtin"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/edittext_background"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Phone:"
                android:textSize="20sp"
                android:textColor="#706F6F"
                android:gravity="bottom"
                android:layout_marginTop="30dp"/>
            <EditText
                android:id="@+id/phone_suathongtin"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/edittext_background"
                android:inputType="textPhonetic"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Address:"
                android:textSize="20sp"
                android:textColor="#706F6F"
                android:gravity="bottom"
                android:layout_marginTop="30dp"/>
            <EditText
                android:id="@+id/address_suathongtin"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/edittext_background"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/btnNext_suathongtin"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="#C09E57"
                app:cardCornerRadius="1000dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Next"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>