<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<!--    android:layout_height="90dp" Trong CardView có thể sửa thành match_parent -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_brand_dssp"
        app:cardCornerRadius="40dp"
        app:cardBackgroundColor="#616161"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/img_brand_dssp"
            android:src="@drawable/ic_patek2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_slcl_dssp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="#C09E57"
            app:cardCornerRadius="1000dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/slConLai_brand_dssp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="130"
                android:textColor="#616161"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>