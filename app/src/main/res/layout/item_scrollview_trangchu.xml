<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_item_dssp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#404040"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/txt_item_dssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Patek Phillipins"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/choose_item_dssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle_bar"
                android:layout_gravity="center"
                android:layout_marginTop="23dp"/>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/ic_item_dssp"
            android:src="@drawable/ic_patek2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:elevation="2dp" />

    </FrameLayout>
</LinearLayout>