<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#313131">

    <!--Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnNotice"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0"
            app:cardBackgroundColor="#313131"
            >
            <ImageView
                android:id="@+id/chuong_iv"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_logo"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_background"
            android:layout_gravity="center"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/btnCart"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_weight="0"
            app:cardBackgroundColor="#313131"
            android:layout_marginRight="10dp"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:background="@drawable/ic_shoping_cart"
                android:contentDescription="shopingcart" />
            <TextView
                android:id="@+id/notification_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center_horizontal"
                android:text="n"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/yellow_dot" />
        </androidx.cardview.widget.CardView>
        <ImageButton
            android:id="@+id/btnUserTrangChu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:text=""
            android:textColorHint="@color/white"
            android:visibility="visible"
            tools:ignore="SpeakableTextPresentCheck"
            android:background="@drawable/ic_user"
            android:foreground="?android:attr/selectableItemBackground">
        </ImageButton>

    </LinearLayout>
    <!--End: header -->

    <!--Banner-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/CardviewBanner_trangchu"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="#404040"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="180dp"
                android:layout_gravity="center_vertical"

                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:background="@drawable/border2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginLeft="28dp"
                    android:text="BSK Watch Offical"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="SALE"
                    android:textColor="@color/white"
                    android:textSize="44sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="225dp"
                android:layout_marginLeft="225dp"
                android:layout_marginTop="130dp"
                android:text="Shop now >>"
                android:textColor="#C09E57"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:src="@drawable/rolex_watch"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            android:elevation="2dp" />
    </FrameLayout>
