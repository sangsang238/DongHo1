<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#313131">

    <!--Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnTrangChu"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0"
            app:cardBackgroundColor="#313131"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/chuong_iv"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_logo"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_background"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/btnSettingTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_setting"
            android:foreground="?android:attr/selectableItemBackground"
            android:text=""
            android:textColorHint="@color/white"
            android:visibility="visible"
            tools:ignore="SpeakableTextPresentCheck"></ImageButton>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnCart"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_weight="0"
            app:cardBackgroundColor="#313131"
            android:layout_marginRight="10dp"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:background="@drawable/ic_shoping_cart"
                android:contentDescription="shopingcart" />
            <TextView
                android:id="@+id/notification_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center_horizontal"
                android:text="n"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/yellow_dot" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <!--End: header -->

    <LinearLayout
        android:id="@+id/function"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnTurnBackTrangThai"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="#313131"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/imgTurnBack"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_turnback"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <TextView
        android:id="@+id/Ten_TrangThai"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="DANG THANH SANG"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Status"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp" />

    <ListView
        android:id="@+id/listviewTrangThaiDonHang"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_margin="15dp"
        android:divider="#00FFFFFF"
        android:dividerHeight="5dp"
        android:drawSelectorOnTop="true"
        />

</LinearLayout>